# ===========================================
# 生产环境环境变量配置文件
# ===========================================

# ---------------------------------
# API 密钥配置
# ---------------------------------

# OpenWeatherMap API 密钥
# 请访问 https://openweathermap.org/api 获取您的API密钥
# 免费套餐：1000次请求/天
NEXT_PUBLIC_OPENWEATHER_API_KEY=your_openweather_api_key_here

# ---------------------------------
# 数据分析追踪配置
# ---------------------------------

# Google Analytics 4 追踪ID
# 请访问 https://analytics.google.com 获取您的GA4追踪ID
# 格式：G-XXXXXXXXXX
NEXT_PUBLIC_GA_ID=G-W4NRKCC421

# Microsoft Clarity 项目ID
# 请访问 https://clarity.microsoft.com 获取您的项目ID
# 格式：通常是10个字符的字符串
NEXT_PUBLIC_CLARITY_PROJECT_ID=sf48bm8vu0

# ---------------------------------
# 应用程序配置
# ---------------------------------

# 应用程序部署URL
# 生产环境：https://your-domain.com
# 开发环境：http://localhost:3000
NEXT_PUBLIC_APP_URL=https://your-domain.com

# 应用程序名称
NEXT_PUBLIC_APP_NAME=Weather App

# 应用程序版本
NEXT_PUBLIC_APP_VERSION=1.4.0

# ---------------------------------
# Next.js 配置
# ---------------------------------

# 环境标识 (development | production | test)
NODE_ENV=production

# 禁用Next.js遥测数据收集（可选）
NEXT_TELEMETRY_DISABLED=1

# ---------------------------------
# 安全和性能配置
# ---------------------------------

# 是否启用性能监控
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# 是否启用错误日志
NEXT_PUBLIC_ENABLE_ERROR_LOGGING=true

# 是否启用用户行为分析
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# ---------------------------------
# 缓存和API配置
# ---------------------------------

# API请求超时时间（毫秒）
NEXT_PUBLIC_API_TIMEOUT=10000

# 天气数据缓存时间（分钟）
NEXT_PUBLIC_WEATHER_CACHE_TIME=10

# ---------------------------------
# 部署平台配置
# ---------------------------------

# Vercel分析（如果使用Vercel部署）
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# 其他部署平台的配置
# NEXT_PUBLIC_NETLIFY_ANALYTICS_ID=your_netlify_analytics_id
